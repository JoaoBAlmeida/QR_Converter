<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Converter.Pages.MainPage"
             Title="QR Converter"
             BackgroundColor="White">

    <ContentPage.Content>
        <AbsoluteLayout>
            <Frame AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"
                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                   BorderColor="Black">
            </Frame>
            <Label AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.3, 0.1, 0.8, 0.3"
                   Text="Selecione o Sistema a ser utilizado!" HorizontalTextAlignment="Center"
                   FontSize="Large" FontAttributes="Bold"/>
            <Picker AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.2, 0.5,  0.99, 0.1"
                    x:Name="pckr_sys"/>
            <Button AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.8, 0.9, 0.3, 0.1"
                    Text="COMEÇAR" BorderColor="Black" CornerRadius="10"
                    Padding="10" Clicked="BtnGoSys"/>
        </AbsoluteLayout>
        
    </ContentPage.Content>

</ContentPage>
